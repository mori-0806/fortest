package demo;

public class lianxi {

	public static void main(String[] args) {
		/*
		 * System.out.println("1*1=1"); System.out.println("1*2=2 2*2=4");
		 * System.out.println("1*3=3 2*3=6 3*3=9");
		 */
		/*
		 * int line=1; for(int i = 1; i <=line ; i++) { System.out.println(i + " * " +
		 * line + " = " + (i*line) +"\t"); } System.out.println(); line ++; for(int i =
		 * 1; i <=line ; i++) { System.out.println(i + " * " + line + " = " +
		 * (i*line)+"\t"); } System.out.println();
		 */
		for (int line = 1; line <= 3; line++) {
			for (int i = 1; i <= line; i++) {
				System.out.println(i + " * " + line + " = " + i * line + "\t");
			}
			System.out.println();
		}
	}
}
