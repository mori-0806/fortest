package Thread;

public class Demo01Sleep {
	public static void main(String[] args) {
		for (int h = 0; h < 24; h++) {
			
			for(int m = 1; m < 60; m++) {
				
				for(int s = 1; s < 60; s++) {
					System.out.println(h+"Ð¡Ê±" +m+"·ÖÖÓ" +s+"Ãë" );
					

					try {
						Thread.sleep(1000);
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}
			}
		
	
		}
	
	}

}
